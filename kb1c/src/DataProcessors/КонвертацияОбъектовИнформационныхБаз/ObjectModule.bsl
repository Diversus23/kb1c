		ИмяОбработчика = СтрЗаменить(ИмяОбработчика, "[ДлинаИмениПКО]", СтрДлина(ИмяПКО));
		НоваяСтрока.ИмяОбработчикаПослеОбработкиВыгрузки = ИмяОбработчика;
		
