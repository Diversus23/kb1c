		ЭтоМодельСервиса = ОбщегоНазначенияПовтИсп.РазделениеВключено();
		
		ПолеРежимСовместимостиСБСП20 = (Конвертация.РежимСовместимости = ""
										Или Конвертация.РежимСовместимости = "РежимСовместимостиСБСП20")
										И Не ЭтоМодельСервиса;
		
	КонецЕсли;
	
