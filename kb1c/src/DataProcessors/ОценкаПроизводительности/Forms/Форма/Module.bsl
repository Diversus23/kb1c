// Процедура загружает настройки ТЧ, если это первое открытие
// то в ТЧ добавляются все ключевые операции из справочника
//
&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	Если Параметры.Свойство("АвтоТест") Тогда // Возврат при получении формы для анализа.
		Возврат;
	КонецЕсли;
	
	Попытка
		ЗагружаемаяНастройка = ЗагрузитьКлючевыеОперации();
		Объект.Производительность.Загрузить(ЗагружаемаяНастройка);
	Исключение
		Сообщить(НСтр("ru = 'Не удалось загрузить настройки.'"), СтатусСообщения.Внимание);
	КонецПопытки;
	
КонецПроцедуры

&НаКлиенте
Процедура ПриОткрытии(Отказ)
	
	ТаблицаОбновлена = Ложь;
	ДиаграммаОбновлена = Ложь;
	
КонецПроцедуры

&НаКлиенте
Процедура ОбработкаВыбора(ВыбранноеЗначение, ИсточникВыбора)
	
	Если ВРег(ИсточникВыбора.ИмяФормы) = ВРег("Обработка.ОценкаПроизводительности.Форма.ФормаОтбора") Тогда
		
		Если ВыбранноеЗначение <> Неопределено Тогда
			ОбновитьПоказатели(ВыбранноеЗначение);
		КонецЕсли;
		
	ИначеЕсли ВРег(ИсточникВыбора.ИмяФормы) = ВРег("Справочник.КлючевыеОперации.Форма.ФормаВыбора") Тогда
		
		ТЧ = Объект.Производительность;
		
		ТекущаяСтрока = Элементы.Производительность.ТекущиеДанные;
		Если ВыбранноеЗначение = Неопределено Тогда
			Если ТекущаяСтрока = Неопределено ИЛИ ЗначениеЗаполнено(ТекущаяСтрока.КлючеваяОперация) Тогда
				Возврат;
			КонецЕсли;
			ТЧ.Удалить(ТекущаяСтрока.НомерСтроки - 1);
			Возврат;
		КонецЕсли;
		
		ПредопределенныйЭлемент = ПредопределенноеЗначение("Справочник.КлючевыеОперации.ОбщаяПроизводительностьСистемы");
		ТекущаяСтрока.КлючеваяОперация = ВыбранноеЗначение.КлючеваяОперация;
		ТекущаяСтрока.ЦелевоеВремя = ВыбранноеЗначение.ЦелевоеВремя;
		ТекущаяСтрока.Приоритет = ВыбранноеЗначение.Приоритет;
		
		ТЧ.Сортировать("Приоритет");
		МассивСтрок = ТЧ.НайтиСтроки(Новый Структура("КлючеваяОперация", ПредопределенныйЭлемент));
		Если МассивСтрок.Количество() > 0 Тогда
			ТекущийИндекс = ТЧ.Индекс(МассивСтрок[0]);
			ТЧ.Сдвинуть(ТекущийИндекс, ТЧ.Количество() - 1 - ТекущийИндекс);
		КонецЕсли;
		
	КонецЕсли;
	
КонецПроцедуры

