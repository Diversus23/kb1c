// Клиент

&НаКлиенте
Процедура Подключаемый_ПриИзмененииРеквизита(Элемент, ОбновлятьИнтерфейс = Истина)
	
	// СтандартныеПодсистемы.УправлениеДоступом
	Если Элемент.Имя = "ОграничиватьДоступНаУровнеЗаписей"
	   И НаборКонстант.ОграничиватьДоступНаУровнеЗаписей Тогда
		
		ТекстВопроса =
			НСтр("ru = 'Включить ограничение доступа на уровне записей?
			           |
			           |Потребуется заполнение данных, которое будет выполняться частями
			           |регламентным заданием ""Заполнение данных для ограничения доступа""
			           |(ход выполнения в журнале регистрации).
			           |
			           |Выполнение может сильно замедлить работу программы и выполняться
			           |от нескольких секунд до многих часов (в зависимости от объема данных).'");
		
		Ответ = Вопрос(ТекстВопроса, РежимДиалогаВопрос.ДаНет);
		Если Ответ = КодВозвратаДиалога.Нет Тогда
			НаборКонстант.ОграничиватьДоступНаУровнеЗаписей = Ложь;
			Возврат;
		КонецЕсли;
	КонецЕсли;
	// Конец СтандартныеПодсистемы.УправлениеДоступом
	
	Результат = ПриИзмененииРеквизитаСервер(Элемент.Имя);
	
	// СтандартныеПодсистемы.УправлениеДоступом
	Если Элемент.Имя = "ОграничиватьДоступНаУровнеЗаписей"
	   И НаборКонстант.ОграничиватьДоступНаУровнеЗаписей Тогда
		
		Если СтандартныеПодсистемыКлиентПовтИсп.ПараметрыРаботыКлиента().ИнформационнаяБазаФайловая Тогда
			ПоказатьОповещениеПользователя(
				НСтр("ru = 'В режиме файловой информационной базы регламентное задание
				           |""Заполнение данных для ограничения доступа""
				           |необходимо выполнить вручную через консоль регламентных заданий.'"),
				"e1cib/app/Обработка.РегламентныеИФоновыеЗадания",
				НСтр("ru = 'Заполнить данные для ограничения доступа'"),
				БиблиотекаКартинок.РегламентныеЗадания);
		КонецЕсли;
	КонецЕсли;
	
	// Конец СтандартныеПодсистемы.УправлениеДоступом
	Если ОбновлятьИнтерфейс Тогда
		#Если НЕ ВебКлиент Тогда
		ПодключитьОбработчикОжидания("ОбновитьИнтерфейсПрограммы", 1, Истина);
		ОбновитьИнтерфейс = Истина;
		#КонецЕсли
	КонецЕсли;
	
	СтандартныеПодсистемыКлиент.ПоказатьРезультатВыполнения(ЭтаФорма, Результат);
	
КонецПроцедуры

&НаКлиенте
Процедура ОбновитьИнтерфейсПрограммы()
	
	#Если НЕ ВебКлиент Тогда
	Если ОбновитьИнтерфейс = Истина Тогда
		ОбновитьИнтерфейс = Ложь;
		ОбновитьИнтерфейс();
	КонецЕсли;
	#КонецЕсли
	
КонецПроцедуры

