	ЗаписьРегистра.Описание			= ЭтотОбъект.ОписаниеИзменений;
	ЗаписьРегистра.Ответственный	= Пользователи.ТекущийПользователь();
	ЗаписьРегистра.Изменено			= ТекущаяДатаСеанса();
	ЗаписьРегистра.Записать(Истина);
	
