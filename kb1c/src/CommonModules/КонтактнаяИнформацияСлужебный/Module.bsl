				)), ПолноеНаименование, Пометка, Картинка);
		Иначе
			ДанныеВыбора.Добавить(ПолноеНаименование, ПолноеНаименование, Пометка, Картинка);
		КонецЕсли;
		
	КонецЦикла;
	
	Возврат Результат;
