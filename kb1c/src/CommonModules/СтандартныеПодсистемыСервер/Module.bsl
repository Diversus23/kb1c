// Возвращает имена предопределенных данных для указанного объекта
// метаданных. Может потребоваться при обновлении информационной базы.
//
// Параметры:
//  ПолноеИмя - полное имя объекта метаданных, который может содержать
//              предопределенные элементы.
//
// Возвращаемое значение:
//  ФиксированныйМассив имен предопределенных элементов.
//
Функция ИменаПредопределенныхДанных(ПолноеИмя) Экспорт
	
	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ТекущаяТаблица.Ссылка КАК Ссылка,
	|	НЕОПРЕДЕЛЕНО КАК ИмяПредопределенныхДанных
	|ИЗ
	|	&ТекущаяТаблица КАК ТекущаяТаблица
	|ГДЕ
	|	ТекущаяТаблица.Предопределенный = ИСТИНА";
	
	Запрос.Текст = СтрЗаменить(Запрос.Текст, "&ТекущаяТаблица", ПолноеИмя);
	
	Если СтандартныеПодсистемыПовтИсп.ЭтоПлатформа83БезРежимаСовместимости() Тогда
		Запрос.Текст = СтрЗаменить(Запрос.Текст, "НЕОПРЕДЕЛЕНО", "ТекущаяТаблица.ИмяПредопределенныхДанных");
	Иначе
		Менеджер = ОбщегоНазначения.МенеджерОбъектаПоПолномуИмени(ПолноеИмя);
	КонецЕсли;
	
	ИменаПредопределенныхДанных = Новый СписокЗначений;
	
	Если ОбщегоНазначенияПовтИсп.РазделениеВключено()
	   И НЕ ОбщегоНазначенияПовтИсп.ДоступноИспользованиеРазделенныхДанных() Тогда
	
		ОбщегоНазначения.УстановитьРазделениеСеанса(Истина, 0);
		Попытка
			Выборка = Запрос.Выполнить().Выбрать();
		Исключение
			ОбщегоНазначения.УстановитьРазделениеСеанса(Ложь);
			ВызватьИсключение;
		КонецПопытки;
		
		Пока Выборка.Следующий() Цикл
			Если СтандартныеПодсистемыПовтИсп.ЭтоПлатформа83БезРежимаСовместимости() Тогда
				ИмяПредопределенныхДанных = Выборка.ИмяПредопределенныхДанных;
			Иначе
				ИмяПредопределенныхДанных = Менеджер.ПолучитьИмяПредопределенного(Выборка.Ссылка);
			КонецЕсли;
			Если ЗначениеЗаполнено(ИмяПредопределенныхДанных) Тогда
				ИменаПредопределенныхДанных.Добавить(ИмяПредопределенныхДанных);
			КонецЕсли;
		КонецЦикла;
		
		ОбщегоНазначения.УстановитьРазделениеСеанса(Ложь);
	Иначе
		Выборка = Запрос.Выполнить().Выбрать();
		
		Пока Выборка.Следующий() Цикл
			Если СтандартныеПодсистемыПовтИсп.ЭтоПлатформа83БезРежимаСовместимости() Тогда
				ИмяПредопределенныхДанных = Выборка.ИмяПредопределенныхДанных;
			Иначе
				ИмяПредопределенныхДанных = Менеджер.ПолучитьИмяПредопределенного(Выборка.Ссылка);
			КонецЕсли;
			Если ЗначениеЗаполнено(ИмяПредопределенныхДанных) Тогда
				ИменаПредопределенныхДанных.Добавить(ИмяПредопределенныхДанных);
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	
	ИменаПредопределенныхДанных.СортироватьПоЗначению();
	Возврат Новый ФиксированныйМассив(ИменаПредопределенныхДанных.ВыгрузитьЗначения());
	
КонецФункции

